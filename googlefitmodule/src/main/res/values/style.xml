<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SummaryCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    <style name="SummaryCardContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
    </style>
    <!-- Used by a TextView acting as a CardView's title in the DailySummaryFragment -->
    <style name="SummaryCardTitle" >
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/card_title</item>
    </style>
    <style name="SummaryCardIcon">
        <item name="android:src">@drawable/ic_directions_walk_24dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="Divider">
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
    </style>

</resources>
